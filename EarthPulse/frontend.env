# Frontend Environment Variables for Earth Observation Visualizer
# Copy this to .env.local and configure your values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# Development Configuration - REAL NASA DATA ENABLED
VITE_DEVELOPMENT_MODE=true
VITE_MOCK_DATA_ENABLED=false
VITE_API_TIMEOUT=30000

# Map Services (Replace with your actual API keys)
VITE_MAPBOX_TOKEN=your_mapbox_token_here
VITE_MAPBOX_STYLE_ID=mapbox://styles/mapbox/dark-v10

# NASA APIs
VITE_NASA_API_KEY=your_nasa_api_key_here
VITE_NASA_DISCOVERY_API=https://api.nasa.gov/access/data/

# CartoDB Configuration
VITE_CARTODB_API_KEY=your_cartodb_key_here
VITE_CARTODB_BASE_URL=https://{s}.basemaps.cartocdn.com/dark_all

# Application Configuration
VITE_APP_NAME=Earth Observation Visualizer
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_REPORTING=true
VITE_ENABLE_DOWNLOADS=true
VITE_ENABLE_SHARING=true

# UI Configuration
VITE_DEFAULT_REGION=nepal_himalayas
VITE_DEFAULT_YEAR=2020
VITE_DATA_YEAR_RANGE=2000-2025

# Export Configuration
VITE_MAX_EXPORT_SIZE=50
VITE_SUPPORTED_EXPORT_FORMATS=pdf,json,csv,png

# Debug Configuration
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
VITE_ENABLE_DEVTOOLS=true

# Performance Configuration
VITE_CACHE_TTL=3600000
VITE_MAX_CONCURRENT_REQUESTS=5
VITE_REQUEST_RETRY_ATTEMPTS=3

# API Endpoints Documentation
# Environmental Data: ${VITE_API_BASE_URL}/api/${VITE_API_VERSION}/environmental/
# Map Services: ${VITE_API_BASE_URL}/api/${VITE_API_VERSION}/maps/
# Reports: ${VITE_API_BASE_URL}/api/${VITE_API_VERSION}/reports/

# Real API Integration Ready
# To connect real NASA APIs, update the following:
# 1. Replace API keys with real NASA/Mapbox credentials
# 2. Set VITE_MOCK_DATA_ENABLED=false
# 3. Start the backend server with real API endpoints
